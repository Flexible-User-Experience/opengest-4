{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% spaceless %}
        {% if object.end | date('Y-m-d') <= 'now' | date('Y-m-d') %}
            {# invalid #}
            <i class="fa fa-times-circle fa-2x text-danger" aria-hidden="true"></i>
        {% else %}
            {% if object.end | date('Y-m-d') <= date('+30days') | date('Y-m-d') %}
                {# almost invalid #}
                <i class="fa fa-exclamation-triangle fa-2x text-yellow" aria-hidden="true"></i>
            {% else %}
                {# valid #}
                <i class="fa fa-check-circle fa-2x text-green" aria-hidden="true"></i>
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock %}
