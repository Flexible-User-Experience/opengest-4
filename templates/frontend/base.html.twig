<!DOCTYPE html>
<!--[if lt IE 7]>     <html lang="{{ app.request.locale }}" class="no-js lt-ie9 lt-ie8 lt-ie7"><![endif]-->
<!--[if IE 7]>        <html lang="{{ app.request.locale }}" class="no-js lt-ie9 lt-ie8"><![endif]-->
<!--[if IE 8]>        <html lang="{{ app.request.locale }}" class="no-js lt-ie9"><![endif]-->
<!--[if gt IE 8]><!--><html lang="{{ app.request.locale }}" class="no-js"><!--<![endif]-->
<head>
    <meta name="description" content="{% block metadescription %}{% endblock %}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="www.flux.cat">
    <meta charset="UTF-8">
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    <title>{% block title %}{{ main_brand_title }}{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets filter="cssrewrite,less" '@mycss' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body{% block body_class %}{% endblock %}>
{#<!-- Head content -->#}
{% block header %}
    <nav class="navbar navbar-default navbar-inverse" role="navigation">
        <div class="container">
            {#<!-- Brand and toggle get grouped for better mobile display -->#}
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand navbar-brand-logo" href="{{ path('front_homepage') }}">
                    <img alt="Grúas Romaní logo" src="{{ asset('bundles/app/img/logo_romani_horizontal.png') | imagine_filter('286xY') }}" class="img-responsive navbar-logo">
                    {#<svg style="background-color: #FFFFFF; margin-top: 5px;" height="60" width="140" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">#}
                        {#<image height="60" width="140" class="navbar-logo" xlink:href="{{ asset('bundles/app/svg/logo_romani.svg') }}" alt="Grúas Romaní Logo"></image>#}
                    {#</svg>#}
                </a>
            </div>
            {#<!-- Collect the nav links, forms, and other content for toggling -->#}
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                {{ knp_menu_render('top', {currentClass: 'active'}) }}
            </div>
        </div>
    </nav>
{% endblock %}
{#<!-- Main content -->#}
{% block main %}{% endblock %}
{#<!-- Scroll-Top effect -->#}
<div class="scroll-top-wrapper"><span class="scroll-top-inner"><i class="fa fa-2x fa-chevron-up"></i></span></div>
{#<!-- Footer -->#}
{% block footer %}
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h3 class="c-yellow no-m-top"><strong>Grúas Romaní, SA</strong></h3>
                </div>
                <div class="col-sm-7">
                    <p class="no-m-bottom">
                        <a target="_blank" href="https://goo.gl/maps/wNjh5avogrH2"><i class="fa fa-map-marker" aria-hidden="true"></i></a> Ctra. Santa Bárbara, Km. 1'5<br>
                        43870 Amposta<br>
                        Tarragona (Spain)<br>
                        <br>
                        <i class="fa fa-phone" aria-hidden="true"></i> (+34) 977 701 795<br>
                        <i class="fa fa-mobile" aria-hidden="true"></i> (+34) 636 963 330<br>
                    </p>
                </div>
                <div class="col-sm-2 text-right">
                    <p>
                        <a href="{{ path('front_about') }}">Sobre este sito</a> <i class="fa fa-caret-right c-yellow" aria-hidden="true"></i><br>
                        <a href="{{ path('front_privacy') }}">Privacidad</a> <i class="fa fa-caret-right c-yellow" aria-hidden="true"></i><br>
                        <a href="{{ path('front_sitemap') }}">Mapa del web</a> <i class="fa fa-caret-right c-yellow" aria-hidden="true"></i>
                    </p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
{#<!-- Javascripts -->#}
{% block javascripts %}
    {% javascripts '@myjs' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="//www.google.com/recaptcha/api.js?hl=es"></script>
{% endblock %}
{% block scroll_top %}
    {#<!-- Scroll-Top effect JS -->#}
    {% include ':Includes:scroll-to-top-js.html.twig' %}
{% endblock %}
{% block analytics %}
    {#<!-- Google Analytics -->#}
    {% if google_analytics_enabled %}
        <script type="text/javascript">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', '{{ google_analytics_account }}', 'auto'); ga('send', 'pageview');
        </script>
    {% endif %}
{% endblock %}
</body>
</html>
