{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ complement.name | upper }} Â· {{ parent() }}{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="main-title no-m">Nuestros accesorios</h1>
                <a href="{{ path('front_complement') }}"><i class="fa fa-caret-square-o-left" aria-hidden="true"></i> Todos los accesorios</a>
            </div>
        </div>
        <hr class="hr-divider">
        <div class="row">
            <div class="col-sm-8">
                <div class="caption">
                    <h3 class="title no-m-top">{{ complement.name }}</h3>
                    <p class="text-muted">{{ complement.description | raw }}</p>
                </div>
            </div>
            <div class="col-sm-4">
                {% if complement.mainImage is not null %}
                    <img src="{{ vich_uploader_asset(complement, 'mainImageFile') | imagine_filter('470x310') }}" alt="{{ complement.name }}" class="img-responsive">
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
